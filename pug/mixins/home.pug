// list item in submenu 
mixin list-item(value)
    li.sub-menu__list-item(class!= attributes.class)
        i(class="fas fa-caret-right")
        a(href="" class="sub-menu__list-link menu__list-link")= value
// submenu
mixin list-link(values)
    ul.sub-menu.sub-menu--format.sub-menu--disable
        each value in values
            +list-item(value)(class!= attributes.class)
// submenu
mixin submenu(values)
    ul.sub-menu.sub-menu--disable
        each value, index in values
            if value
                li.sub-menu__list-item(class!= attributes.class)
                    i(class="fas fa-caret-right")
                    a(href="" class="sub-menu__list-link menu__list-link")= index
                    +list-link(value)(class!= attributes.class)
            else
                +list-item(index)(class!= attributes.class)

// icon before title (exm: sản phẩm bán chay...)
mixin icon-title(value, hide_icon= "", icon="")
    if hide_icon
        .wrapper-icon-title
            a(href="" class!=attributes.class).wrapper-icon-title__link= value
        
    else
        if icon
            .wrapper-icon-title
                .wrapper-icon-title__list(class!=attributes.class)!= icon
                a(href="" class!=attributes.class).wrapper-icon-title__link= value
        else       
            .wrapper-icon-title
                ul(class!=attributes.class).wrapper-icon-title__list
                    li.wrapper-icon-title__item .
                    li.wrapper-icon-title__item .
                    li.wrapper-icon-title__item .
                    li.wrapper-icon-title__item .
                a(href="" class!=attributes.class).wrapper-icon-title__link= value



mixin group-slider(values)
    .slider__block
        !=values.icon
        .slider__content
            p.slider__block-title= values.title
            p.slider__block-description= values.description

